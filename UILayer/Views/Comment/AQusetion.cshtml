@{
    ViewBag.Title = ViewData["title"].ToString();
    Layout = "~/Views/Shared/_LayoutUser2.cshtml";
}

@model Comment

@{
    //short? commentType;
    //if (ViewData["commentType"] != null) { comment.CommentType = (short)ViewData["commentType"]; }
}
@{
    using (Html.BeginForm("Register", "Comment", null, FormMethod.Post,false, new { id = "EditorRowForm" }))
    {
        @Html.Hidden("CommentType", Model.CommentType)

        <table class="tb">
            <tr class="tr1">
                <td class="td1">ایمیل:</td>
                <td class="td2">
                    @Html.TextBox("KeyWord", "", new { @id = "KeyWord", @title = "پر کردن این فیلد اختیاری می باشد " })
            </td>
        </tr>
        <tr class="tr2">
            <td class="td1">@("متن " + ViewData["title"].ToString())*:</td>
            <td class="td2">@Html.TextArea("TextValue", Model.TextValue, new { @id = "Comment1", @onblur = JavaScript.StringValidation("TextValue", 1, 600) })</td>
        </tr>
        <tr class="tr1">
            <td class="td1"></td>
            <td class="td2">
                <input type="submit" value= '@("ارسال " + ViewData["title"].ToString())' />
        </td>
    </tr>

</table>
