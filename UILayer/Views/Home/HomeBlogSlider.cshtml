@using DataLayer.Models
@using DataLayer.EF

@using System.Linq
@using System.Collections.Generic;
@using UILayer.Miscellaneous
@using Utility
@model IQueryable<Content>

<div class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section_title s_title_style3">
                    <h2>آخرین مطالب بلاگ</h2>
                </div>
                <div class="blog_container blog_column4 owl-carousel">
                    @foreach (var item in Model.Take(10).ToList())
                    {
                         <article class="single_blog">
                             <figure>
                                 <div class="blog_thumb">
                                     <a href="@Url.Action("ShowContent","Content",new {contentId=item.Id, title=item.Name.Replace(' ','-') })"><img src="@item.BanerImageAdress.GetOtherFilePath()" alt=""></a>
                                 </div>
                                 <figcaption class="blog_content">
                                     <h4><a href="@Url.Action("ShowContent","Content",new {contentId=item.Id, title=item.Name.Replace(' ','-') })">@item.Name</a></h4>
                                     <div class="post_meta">
                                         <p>توسط  <a href="@Url.Action("ListByContentType","Content", new { contentType = item.ContentType })">@item.Writer</a> در تاریخ <a href="#">@item.UpdateDate.ToPersianDateWithMonthName()</a></p>
                                     </div>
                                     <div class="post_desc">
                                         <p>@item.Abstract</p>
                                     </div>
                                     <footer class="post_readmore">
                                         <a href="@Url.Action("ShowContent","Content", new { contentId=item.Id ,title=item.Name.Replace(' ','-')})">بیشتر بخوانید</a>
                                     </footer>
                                 </figcaption>
                             </figure>
                         </article>
        }
                </div>
            </div>
        </div>
    </div>
</div>



