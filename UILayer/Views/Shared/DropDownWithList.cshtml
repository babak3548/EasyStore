@using System.Reflection;
@using UILayer.Miscellaneous;
@model ModelPartial
@{  object htmlObj = new
{
    id = Model.PropertyName,
    onblur = "drdValidation('" + Model.PropertyName + "','" + UIUtility.ResourceManager.GetString("this_fieled_cannot_null") + "')"
};
    if (Model.IsReadonly)
    {
        htmlObj = new
            {
                id = Model.PropertyName,
                disabled = "disabled",
                onblur = "drdValidation('" + Model.PropertyName + "','" + UIUtility.ResourceManager.GetString("this_fieled_cannot_null") + "')"

            };
    }
}
