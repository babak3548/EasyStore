@using DataLayer.Contract;
@using System.Reflection;
@using UILayer.Views
@using UILayer.Miscellaneous
@using Utility


@model BasePartialModel
@{
    //مقدار پیش فرض
    if (string.IsNullOrWhiteSpace(Model.ValidateMethod ))
{
        Model.ValidateMethod = "StringValidation(\"" + Model.PropertyName + "\",1,50,\"" +
                UIUtility.ResourceManager.GetString("this_fieled_cannot_null") + "\",\"" +
                UIUtility.ResourceManager.GetString("min_value_this_field") + "\",\"" +
                UIUtility.ResourceManager.GetString("max_value_this_field") + "\")";
    }

    if (string.IsNullOrWhiteSpace(Model.langugeValue)) { Model.langugeValue = UIUtility.ResourceManager.GetString(Model.PropertyName); }
    if (string.IsNullOrWhiteSpace(Model.langugeValue)) { Model.langugeValue = Model.PropertyName; }

    if (string.IsNullOrWhiteSpace(Model.TitleValue)) { Model.TitleValue = UIUtility.ResourceManager.GetString("Title" + Model.PropertyName); }

}


@Html.Label(Model.langugeValue)
@{

    <input id='@(Model.PropertyName )' name='@(Model.PropertyName)' type="text" value='@(Model.value)' onblur='@( Model.ValidateMethod)' />





}