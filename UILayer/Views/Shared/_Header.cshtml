@using DataLayer.Contract
@using DataLayer.Enums
@using UILayer.Miscellaneous
@using DataLayer.EF
@using Microsoft.AspNetCore.Http
@using DataLayer.Models
@using System
@{
    var currentUseContract = (ViewBag.HttpContext as HttpContext).Session.GetObjectFromJson<UserContract>("User");
    var CurrentUser = ((UserContract)ViewData["User"]);
    var CurrentMarketer = (ViewBag.HttpContext as HttpContext).Session.GetObjectFromJson<MarketerContract>("MarketerContract");
    var businessOwner = (ViewBag.HttpContext as HttpContext).Session.GetObjectFromJson<BusinessOwnerContract>("BusinessOwnerContract");

}

<header>
    <div class="main_header">
        <div class="container">
            <!--header top start-->
            <div class="header_top">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-md-5">
                        <div class="antomi_message">
                            <p>ارسال رایگان - ضمانت بازگشت وجه 24 ساعته</p>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-7">
                        <div class="header_top_settings text-right">
                            <ul>
                                <li><a href="@Url.Action("ShowContent","Content", new {contentId=8 , title="تماس با ما".Replace(' ','_')} )">آدرس‌های فروشگاه</a></li>
                                <li><a href="@Url.Action("MyAccount","User" )">پیگیری سفارش</a></li>
                                <li>تلفن تماس: <a class="ltr-text" href="tel:@ExtentionMethodsImage.AppSetting.PhoneNumber"> @ExtentionMethodsImage.AppSetting.PhoneNumberForShow </a></li>
                                <li>ضمانت اصالت کالا</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--header top start-->
            <!--header middel start-->
            <div class="header_middle sticky-header">
                <div class="row align-items-center">
                    <div class="col-lg-2 col-md-6">
                        <div class="logo">
                            <a href="/"><img src="@Url.Content("~/assets/img/logo/logo.png")" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12">
                        <div class="main_menu menu_position text-center">
                            <nav>
                                <ul>
                                    <li><a href="@Url.Action("Index","Home", new {PromotionType=PromotionTypes.TopHomeSlider1_3_M} )">تخفیف‌ها و پیشنهادها</a></li>

                                    <li>
                                        <a href="@Url.Action("AllContent","Content" )">بلاگ <i class="fa fa-angle-down"></i></a>
                                        <ul class="sub_menu pages">
                                            <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=14 , title="نحوه ثبت سفارش".Replace(' ','_')} )">نحوه ثبت سفارش</a></li>
                                            <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=12 , title="روش های ارسال کالا".Replace(' ','_')} )">روش های ارسال کالا</a></li>
                                            <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=9 , title="پرسش‌های متداول".Replace(' ','_')} )">سوالات متداول</a></li>

                                        </ul>
                                    </li>

                                    <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=11 , title="همکاری با ما".Replace(' ','_')} )">همکاری با ما</a></li>
                                    <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=7 , title="درباره ببین‌و‌بخر".Replace(' ','_')} )">درباره ما</a></li>
                                    <li><a rel="nofollow" href="@Url.Action("ShowContent","Content", new {contentId=8 , title="تماس با ما".Replace(' ','_')} )"> تماس با ما</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="header_configure_area">
                                <div class="header_wishlist">
                                    <a rel="nofollow" href="@Url.Action("Index","Wishlist")">
                                        <i class="ion-android-favorite-outline"></i>
                                        <span class="wishlist_count">@(currentUseContract==null?0: currentUseContract.CountWishes)</span>
                                    </a>
                                </div>
                            @Html.Partial("_MiniCart")
                        </div>
                    </div>
                </div>
            </div>
            <!--header middel end-->
            <!--header bottom satrt-->
            <div class="header_bottom">
                <div class="row align-items-center">
                    <div class="column1 col-lg-3 col-md-6">
                        @Html.Partial("Category")
                    </div>

                    
                    <div class="column2 col-lg-6 ">
                        @Html.Partial("_Search" , "categori2")
                    </div>
                    <div class="column3 col-lg-3 col-md-6">
                        <div class="header_bigsale">
                            <a href="@(Url.Action("Index", "Home", new  { PromotionType = PromotionTypes.HomeBlackKey_M , category=DefualtValue.AllCategory}))"> @ViewBag.HomeBlackKeyTitle</a> @*فروش بزرگ جمعه سیاه*@
                        </div>
                    </div>
                </div>
            </div>
            <!--header bottom end-->
        </div>
    </div>
</header>
