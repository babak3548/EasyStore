@model DataLayer.EF.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>ویرایش گروه</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitlePage" class="control-label"></label>
                <input asp-for="TitlePage" class="form-control" />
                <span asp-validation-for="TitlePage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input disabled="disabled" asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCategory" class="control-label">سرگروه</label>
                <select asp-for="FkCategory" class="form-control" asp-items="ViewBag.FkCategory"></select>
                <span asp-validation-for="FkCategory" class="text-danger"></span>
            </div>
            <input type="submit" value="ذخیره" class="btn btn-primary mx-2" />
            <a asp-action="Index" class="btn btn-info mx-2">مشاهده لیست</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2">حذف</a>

        </form>
    </div>
</div>

