@model IEnumerable<DataLayer.EF.Setting>

@{
    ViewData["Title"] = "پیکربندی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>این قسمت فقط باید توسط ادمین سیستم اصلاح شود</h3>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkCategorySettingNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkCategorySettingNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">مشاهده</a> |
                @*<a asp-action="Delete" asp-route-id="@item.Id">حذف</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
